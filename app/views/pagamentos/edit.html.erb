<%= link_to "Dashboard", root_url %> &gt; <%= link_to "Pagamentos", pagamentos_url %> &gt; Atualizar pagamento

<% form_for(@pagamento) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome, "Nome:" %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :descricao, "Descrição:" %><br />
    <%= f.text_area :descricao %>
  </p>
  <p>
    <%= f.label :vencimento, "Vencimento:" %><br />
    <%= f.date_select :vencimento %>
  </p>
  <p>
    <%= f.label :valor, "Valor:" %><br />
    <%= f.text_field :valor %>
  </p>
  <p>
    <%= f.label :confirmado, "Confirmado? " %><%= f.check_box :confirmado %>
  </p>
  <p>
    <%= f.submit 'Atualizar' %> ou <%= link_to 'Voltar', pagamentos_path %>
  </p>
<% end %>

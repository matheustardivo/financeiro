<h1>Listing tipos</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Descricao</th>
    <th>Valor</th>
  </tr>

<% @tipos.each do |tipo| %>
  <tr>
    <td><%=h tipo.nome %></td>
    <td><%=h tipo.descricao %></td>
    <td><%=h tipo.valor %></td>
    <td><%= link_to 'Show', tipo %></td>
    <td><%= link_to 'Edit', edit_tipo_path(tipo) %></td>
    <td><%= link_to 'Destroy', tipo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tipo', new_tipo_path %>
<h1>New tipo</h1>

<% form_for(@tipo) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :descricao %><br />
    <%= f.text_area :descricao %>
  </p>
  <p>
    <%= f.label :valor %><br />
	<%= f.radio_button :valor, "C" %>Crédito<br />
	<%= f.radio_button :valor, "D" %>Débito
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', tipos_path %>
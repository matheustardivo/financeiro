<%= link_to "Dashboard", root_url %> &gt; Editar usuário

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username, "Usuário:" %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email, "E-mail:" %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password, "Senha:" %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirmar a senha:" %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit 'Editar' %> ou <%= link_to 'Voltar', root_path %>
  </p>
<% end %>
